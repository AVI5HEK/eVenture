<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Change Your Password"
        android:textSize="18dp"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:text="New Password"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/newpass"
        android:hint="New Password"
        android:textColor="#000000"
        android:password="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:id="@+id/btchangepass"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/btcancel"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_below="@+id/btchangepass"
        android:layout_alignLeft="@+id/btchangepass"
        android:layout_alignStart="@+id/btchangepass"
        android:layout_alignRight="@+id/btchangepass"
        android:layout_alignEnd="@+id/btchangepass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:id="@+id/alertpass"
        android:textColor="#000000"
        android:layout_below="@+id/btchangepass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />
</RelativeLayout>