<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="@drawable/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to eVenture"
        android:textSize="30dp"
        android:id="@+id/textView" android:layout_gravity="center"
        android:paddingBottom="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:id="@+id/email"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/loginErrorMsg"
        android:layout_alignRight="@+id/passres"
        android:layout_alignEnd="@+id/passres"
        android:layout_alignLeft="@+id/passres"
        android:layout_alignStart="@+id/passres" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Sign up"
        android:id="@+id/registerbtn"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/passres"
        android:layout_alignLeft="@+id/passres"
        android:layout_alignStart="@+id/passres"
        android:layout_alignRight="@+id/passres"
        android:layout_alignEnd="@+id/passres" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/loginErrorMsg"
        android:textColor="#ff0000"
        android:layout_below="@+id/pword"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Email"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Password"
        android:id="@+id/pworda"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Forgot Password"
        android:id="@+id/passres"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

